{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>#</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
            <tr>
                <th>Intro</th>
                <td>{{ post.intro }}</td>
            </tr>
            <tr>
                <th>Publish Date</th>
                <td>{{ post.publishDate ? post.publishDate|date('Y-m-d') : '-' }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ post.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ post.category.name ?? 'Undefined' }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated At</th>
                <td>{{ post.updatedAt ? post.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_post_index') }}" class="btn btn-secondary">‚Üê back to list</a>
    <br>
    <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-primary mt-2">edit</a>

    {{ include('admin/post/_delete_form.html.twig') }}
{% endblock %}
