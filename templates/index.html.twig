{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}

    {% if posts is empty %}
        <h3>No posts available.</h3>
    {% endif %}

    {% for post in posts %}
        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">{{ post.title }}</h5>
                <p class="card-text">{{ post.intro }}</p>
                <a href="{{ path('app_site_show', {'slug': post.slug })  }}" class="btn btn-primary">View post</a>
            </div>
        </div>
    {% endfor %}

{% endblock %}
